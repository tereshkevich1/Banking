<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyCalendarView" parent="android:Widget.CalendarView">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorControlActivated">@color/color_control_activated</item>
        <item name="android:dateTextAppearance">@style/CalenderViewDateTextAppearance</item>
        <item name="android:weekDayTextAppearance">@style/CalenderViewWeekCustomText</item>
    </style>

    <style name="CalenderViewDateTextAppearance" parent="android:TextAppearance.Material.Small">
        <item name="android:textColor">@color/week_number_color</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.Material.Small">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>